<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

             <persistence-unit name="integrador3">

                <class>com.example.tpintegrador3.Entidades.Carrera</class>
                <class>com.example.tpintegrador3.Entidades.Estudiante</class>
                <class>com.example.tpintegrador3.Entidades.Estudiante_Carrera</class>

                <properties>
                    <property name="javax.persistence.schema-generation.database.action" value="update"/>
                    <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/integrador3"/>
                    <property name="javax.persistence.jdbc.user" value="root"/>
                    <property name="javax.persistence.jdbc.password" value=""/>
                    <property name="hibernate.hbm2ddl.auto" value="update" />
                    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
                    <property name="show_sql" value="true" />
                </properties>

            </persistence-unit>
</persistence>